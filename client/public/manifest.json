{
  "name": "CloudPhotos",
  "short_name": "CloudPhotos",
  "description": "Capture and store photos in Amazon Photos",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#1d1d1f",
  "theme_color": "#1d1d1f",
  "orientation": "any",
  "categories": ["photo", "productivity"],
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Take Photo",
      "short_name": "Camera",
      "url": "/camera",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/camera",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [{ "name": "photo", "accept": ["image/*"] }]
    }
  }
}
